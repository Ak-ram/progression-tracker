mixin carusol(Slide_1_img,slide_1_Header,Slide_1_Paragraph,Slide_1_btn1,Slide_1_btn2,Slide_2_img,slide_2_Header,Slide_2_Paragraph)
    div.carousel
        div.container
            div(id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel")
                div(class="carousel-indicators")
                    - for (var x=1;x<3;x++)
                        button(type='button' data-bs-target="#carouselExampleCaptions" data-bs-slide-to=x-1, aria-current="true" aria-label= 'slide' + x)
                    if x = 3
                        button(type="button" class="play active" title = 'Play/Pause Slides')
                            i(class="fas fa-play")
                div(class="carousel-inner")
                    div(class="carousel-item")
                        img(src=UrlBase+Slide_1_img, class="d-block w-100" alt="...")
                        div(class="carousel-caption G-b G-animate d-none d-md-block")
                            h1=slide_1_Header
                            p=Slide_1_Paragraph
                            button(class='btn shop_now')=Slide_1_btn1
                            button(class='btn')=Slide_1_btn2

                    div(class="carousel-item active")
                        img(src= UrlBase+ Slide_2_img,  class="d-block w-100" alt="...")
                        div(class="carousel-caption G-a G-animate d-none d-md-block")
                            h2=slide_2_Header
                            p=Slide_2_Paragraph
                            button(class='btn shop_now')=Slide_1_btn1

                button(class="carousel-control carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev")
                    span(aria-hidden="true"): i(class="fas fa-chevron-left")
                    span(class="visually-hidden") Previous
                button(class="carousel-control carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next")
                    span(aria-hidden="true"): i(class="fas fa-chevron-right")
                    span(class="visually-hidden") Next
